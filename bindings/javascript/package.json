{
  "name": "psyne",
  "version": "1.0.0",
  "description": "High-performance zero-copy messaging library optimized for AI/ML applications",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "keywords": [
    "messaging",
    "ipc",
    "zero-copy",
    "high-performance",
    "ai",
    "ml",
    "machine-learning",
    "communication",
    "channel",
    "rpc"
  ],
  "author": "Psyne Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/joshmorgan1000/psyne.git",
    "directory": "bindings/javascript"
  },
  "bugs": {
    "url": "https://github.com/joshmorgan1000/psyne/issues"
  },
  "homepage": "https://github.com/joshmorgan1000/psyne",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "lib/**/*",
    "types/**/*",
    "build/Release/psyne_native.node",
    "binding.gyp",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:native && npm run build:js",
    "build:native": "node-gyp rebuild",
    "build:js": "tsc",
    "clean": "node-gyp clean && rm -rf lib/ types/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write src/**/*.{ts,js}",
    "docs": "typedoc",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "node-addon-api": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.0.0",
    "node-gyp": "^10.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0"
  },
  "gypfile": true,
  "binary": {
    "module_name": "psyne_native",
    "module_path": "./build/Release/",
    "host": "https://github.com/joshmorgan1000/psyne/releases/download/"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.(ts|js)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/**/*.d.ts"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off"
    }
  }
}