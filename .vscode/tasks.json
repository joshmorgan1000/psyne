{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-E",
                "rm",
                "-rf",
                "${workspaceFolder}/build",
                "&&",
                "cmake",
                "-E",
                "make_directory",
                "${workspaceFolder}/build",
                "&&",
                "cmake",
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-DCMAKE_BUILD_TYPE=Debug",
                "&&",
                "cmake",
                "--build",
                "${workspaceFolder}/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "CMake Optimized",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-E",
                "rm",
                "-rf",
                "${workspaceFolder}/build",
                "&&",
                "cmake",
                "-E",
                "make_directory",
                "${workspaceFolder}/build",
                "&&",
                "cmake",
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-G",
                "Ninja",
                "-DCMAKE_BUILD_TYPE=Release",
                "&&",
                "cmake",
                "--build",
                "${workspaceFolder}/build",
                "-j16",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_CXX_FLAGS='-03 -flto -march=native -mtune=native -Wl,-O1 -Wl,--strip-all'"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}